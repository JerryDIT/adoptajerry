<div class="medium-8 small-centered columns">
  <div class="panel">
    <%= gravatar_tag @maker.uid, :size => 50 %>
    <% if @maker == current_maker %>
      <%= link_to 'Edit my profile', edit_profile_path, class: 'button tiny radius right' %>
    <% end %>
    <p class="label radius secondary"><%= "+#{@maker.name}"%></p>
    <h5 class="subheader"><%= "Happy maker since #{@maker.created_at.strftime("%B %Y")}" %></h5>
  </div>

  <h1><%= "Contributions from #{@maker.name}" %></h1>

  <% if @jerries.any? %>
    <% @jerries.each do |jerry| %>
    <p>
    <% if jerry.avatar.url %>
      <%= link_to image_tag(jerry.avatar.url(:small).to_s), jerry_path(jerry) %>
    <% else %>
      <%= link_to image_tag("http://placehold.it/50x50&text=#{jerry.name.first.upcase}"), jerry_path(jerry) %>
    <% end %>
      <%= link_to jerry.name, jerry_path(jerry) %>
    </p>
    <% end %>
  <% end %>
</div>
