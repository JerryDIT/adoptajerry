<!-- Thumbnails -->
<div class="large-12 columns">
  <div class="row">

    <div class="medium-3 small-6 small-centered columns">
      <div class="profile">
        <%= link_to image_tag("/add_jerry.png", alt: "+ add a new Jerry"), new_jerry_path %>
      </div>
      <div class="panel">
        <h5 class="text-center"><%= link_to "Add a new Jerry", new_jerry_path %></h5>
      </div>
    </div>

    <h2 class="text-center">Meet the family !</h2>

  </div>

  <div class="row">
    <% @jerries.each do |jerry| %>
    <div class="medium-3 small-6 columns">
      <div class="profile">
        <% if jerry.avatar? %>
          <%= link_to image_tag(jerry.avatar.url(:medium).to_s, alt: "Avatar of #{jerry.name}"), jerry %>
        <% else %>
          <%= link_to image_tag("http://placehold.it/300x300&text=#{jerry.name}", alt: "Avatar of #{jerry.name}"), jerry %>
        <% end %>
      </div>

      <div class="panel">
        <h5><%= link_to jerry.name.to_s, jerry %></h5>
        <h6 class="subheader">
          <% if jerry.location %>
            <%= "in #{jerry.location}" %>
          <% else %>
            on the internets
          <% end %>
        </h6>
      </div>
    </div>
    <% end %>

  </div>
</div>
