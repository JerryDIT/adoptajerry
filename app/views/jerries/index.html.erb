<div id="fold" class="small-centered columns">
  <%= image_tag("/welcome_to_jerry.gif", alt: "Welcome to adopt a Jerry, the social network for your Jerry Computer") %>
</div>
<div class="small-centered columns small-8 medium-3">
  <a href="#tour" class="expand radius button">Take the Tour</a>
</div>

<div id="tour" class="large-9 columns small-centered">
  <div class="flex-video">
    <iframe width="1280" height="720" src="//www.youtube.com/embed/asZ11Nb3Rsg?rel=0" frameborder="0" allowfullscreen></iframe>
  </div>
</div>

<!-- Thumbnails -->
<div id="register" class="large-12 columns">
  <div class="row">
    <h2 class="text-center">Register your Jerry</h2>
    <div class="medium-3 small-6 small-centered columns">
      <div class="profile">
        <%= link_to image_tag("/add_jerry.png", alt: "+ add a new Jerry"), new_jerry_path %>
      </div>
      <div class="panel">
        <h5 class="text-center"><%= link_to "Jerry [...]", new_jerry_path %></h5>
      </div>
    </div>
  </div>

  <div id="family" class="row">
    <h2 class="text-center">Meet the family !</h2>
    <% @jerries.each do |jerry| %>
    <div class="medium-3 small-6 columns">
      <div class="profile">
        <% if jerry.avatar? %>
          <%= link_to image_tag(jerry.avatar.url(:medium).to_s, alt: "Avatar of #{jerry.name}"), jerry %>
        <% else %>
          <%= link_to image_tag("http://placehold.it/300x300&text=#{jerry.name}", alt: "Avatar of #{jerry.name}"), jerry %>
        <% end %>
      </div>

      <div class="panel">
        <h5><%= link_to jerry.name.to_s, jerry %></h5>
        <h6 class="subheader">
          <% if jerry.location %>
            <%= "in #{jerry.location.split(',').first}" %>
          <% else %>
            on the internets
          <% end %>
        </h6>
      </div>
    </div>
    <% end %>

  </div>
</div>
<!-- End Thumbnails -->
