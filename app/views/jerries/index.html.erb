<div class="small-centered columns text-center">
  <h2><small>Jerry DIT presents</small> The Jerry Family</h2>
</div>

<!-- Thumbnails -->
<div class="large-12 columns">
  <div class="row">

    <div class="large-4 small-6 columns">
      <div class="profile">
        <%= link_to image_tag("/add_jerry.png"), new_jerry_path %>
      </div>

      <div class="panel">
        <h3><%= link_to "Add a new Jerry", new_jerry_path %></h3>
        <h6 class="subheader">
            
        </h6>
      </div>
    </div>

    <% @jerries.each do |jerry| %>
    <div class="large-4 small-6 columns">
      <div class="profile">
        <% if jerry.avatar? %>
          <%= link_to image_tag(jerry.avatar.url(:medium).to_s), jerry %>
        <% else %>
          <%= link_to image_tag("http://placehold.it/310x310&text=#{jerry.name}"), jerry %>
        <% end %>
      </div>

      <div class="panel">
        <h5><%= link_to jerry.name.to_s, jerry %></h5>
        <h6 class="subheader">
          <% if jerry.location %>
            <%= "in #{jerry.location}" %>
          <% else %>
            on the internets
          <% end %>
        </h6>
      </div>
    </div>
    <% end %>

  </div>
</div>
<!-- End Thumbnails -->
