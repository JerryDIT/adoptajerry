<div class="medium-8 small-centered columns">
  <h1><%= @jerry.name %></h1>

  <% if @jerry.avatar? %>
    <a href="<%= @jerry.avatar.url(:large).to_s %>">
      <%= image_tag @jerry.avatar.url(:medium).to_s, alt: "Avatar of #{@jerry.name}" %>
    </a>
  <% else %>
    <%= image_tag "http://placehold.it/300x300&text=#{@jerry.name}", alt: "Avatar of #{@jerry.name}" %>
  <% end %>

  <p>
    <strong>Bio:</strong>
    <%= @jerry.bio %>
    <br>
    <strong>Location:</strong>
    <%= @jerry.location %>
  </p>
  <%= link_to 'Edit profile', edit_jerry_path(@jerry), :class => "button tiny radius" if @jerry.makers.include? current_maker %>

  <% if @jerry.organs.any? %>
  <h2>Organs</h2>
  <%= render @jerry.organs %>
  <% end %>

  <% if @jerry.skills.any? %>
  <h2>Skills</h2>
  <%= render @jerry.skills %>
  <% end %>

  <h2>Makers</h2>
  <% @jerry.makers.each do |maker| %>
  	<%= link_to "+#{maker.name}", maker_path(maker), class: "label radius secondary" %>
  <% end %>
  <br><br>
  <%= link_to 'Add a maker', edit_team_path(@jerry), :class => "button tiny radius" if @jerry.makers.include? current_maker %>
</div>
